<div class="card-deck-wrapper">
  <div class="card-deck"> 
    <div id=image-card class="card">
      <h1 class="card-title"><%= post.game %></h1>
      <br>
        <%= image_tag (post.image.thumb.url) %>
          <div class="card-block"> 
      <br>
              <h4 class="card-text"><%= post.description %></h4>
                <h5 class="card-text"><%= post.user.username %></h5>
                <h6 class="card-text"><%= link_to 'Show', post %>
                <% if post.user_id  == current_user.id %>
                <h6><%= link_to 'Edit', edit_post_path(post) %>
                <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
                </h6>
               <% end %>  
          </div>
    </div>
  </div>
</div>
