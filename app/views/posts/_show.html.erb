<br>
<div class="card-deck">
<div class ="card card-block">
  <h1 class="card-title"><%= @post.game %></h1>
  <%= image_tag (@post.image.detail.url) %>
<br>

  <h3 class="card-text"><%= @post.description %></h3>
  
  <h4 class="card-text">Genres:<%= @post.genres.map{ |x| x.name }.join(", ") %></h4>
  <h4 class="card-text">Platforms:<%= @post.platforms.map{ |x| x.name }.join(", ") %></h4>  



  <h6 class="card-text"><%= @post.user.username %></h6>
  



<% if @post.user == current_user %>
<%= link_to 'Edit', edit_post_path(@post) %> |


<% end %>
<%= link_to 'Back', posts_path %>
</div>
</div>