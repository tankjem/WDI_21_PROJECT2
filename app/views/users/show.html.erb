<div class="user-show">
<br>
<div class="container">
    <div id="user-card" class="card card-block">
      <%= image_tag (@user.profile_picture.thumb.url), :class =>"card-img-top" %>
    <h1 class="card-title"><%= @user.username %></h1>
    <h5 class="card-text"><%= @user.email %></h5>
    </div>
</div>
<div class="container">
  <div class= "row">
    <div class="card-deck-wrapper">
      <div class="card-deck">
      
     <%= render @user.posts %>
          
      </div>
    </div>
  </div>
</div>
</div>